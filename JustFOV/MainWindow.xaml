<Window x:Class="JustFOV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustFOV"
        mc:Ignorable="d"
        Title="Just FOV" Height="72.664" Width="281.368" ResizeMode="CanMinimize">
    <Grid>
        <Slider Margin="10,10,82,0" VerticalAlignment="Top" Value="{Binding Fov, Mode=TwoWay}" Minimum="1" Maximum="90" />
        <TextBlock Text="{Binding Fov, StringFormat=FOV:{0}}" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="67" />
    </Grid>
</Window>
